<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#F1F5FB" />

    <!-- Border color -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Padding inside the EditText (can be controlled via EditText padding too) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>